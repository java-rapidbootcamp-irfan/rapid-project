@model IEnumerable<Asset_Management.ViewModel.RequestAssetResponse>
@{
    ViewBag.Title = "Request Assets";
    Layout = "_Layout";
}
<h2>Request Assets</h2>

<table class="table table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>PIC Name</th>
            <th>Specification</th>
            <th>Request Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.Specification</td>
                <td>@item.RequestDate</td>
                <td>
                    <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-sm btn-success">Approve</a>
                    <a asp-action="Reject" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
