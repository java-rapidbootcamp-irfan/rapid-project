@model IEnumerable<Asset_Management.ViewModel.RequestListResponse>
@{
    ViewBag.Title = "Request Assets";
    Layout = "_Layout";
}
<h2>Request Assets</h2>

<table class="table table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>PIC Name</th>
            <th>Specification</th>
            <th>Request Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.Specification</td>
                <td>@item.RequestDate</td>
                <td>@item.Status</td>
            </tr>
        }
    </tbody>
</table>
